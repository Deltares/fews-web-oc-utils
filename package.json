{
  "name": "@deltares/fews-web-oc-utils",
  "version": "1.0.1",
  "description": "Util Library for common Web OC functionality",
  "author": {
    "name": "Werner Kramer",
    "email": "werner.kramer@deltares.nl"
  },
  "keywords": [
    "FEWS",
    "PI REST Service",
    "Web Operator Client",
    "Web OC"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    "import": "./lib/esm/index.js",
    "require": "./lib/cjs/index.js"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "typings": "./lib/types/index.d.ts",
  "private": false,
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && webpack",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "clean": "shx rm -rf lib dist",
    "doc": "typedoc --out doc src",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "test:unit": "jest unit --collect-coverage",
    "test:e2e": "jest e2e",
    "test": "jest --coverage",
    "sonar": "sonar-scanner -Dsonar.host.url=$SONAR_URL -Dsonar.login=$SONAR_TOKEN -Dsonar.projectKey=$SONAR_KEY -Dsonar.projectName='Delft-FEWS Web OC Utils'"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "cross-fetch": "^4.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "fetch-mock": "^12.5.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jest-teamcity-reporter": "^0.9.0",
    "jsdom": "^27.0.1",
    "shx": "^0.4.0",
    "sonarqube-scanner": "^3.0.1",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "overrides": {
    "babel-plugin-istanbul": {
      "test-exclude": {
        "glob": "10.4.5"
      }
    }
  },
  "jest-junit": {
    "outputDirectory": "reports/",
    "outputName": "junit.xml"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist/*",
    "lib/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deltares/fews-web-oc-utils"
  },
  "bugs": {
    "url": "https://github.com/Deltares/fews-web-oc-utils/issues"
  }
}
